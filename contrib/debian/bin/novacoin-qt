#!/bin/sh

set -e

umask 077

basedir=~/.evotion
dbfile="$basedir/DB_CONFIG"
cfgfile="$basedir/evotion.conf"

[ -e "$basedir" ] || mkdir "$basedir"

# Evotion does not clean up DB log files by default
[ -e "$dbfile" ] || echo 'set_flags DB_LOG_AUTOREMOVE' > "$dbfile"

exec /usr/lib/evotion/evotion-qt "$@"
